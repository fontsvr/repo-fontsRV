<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.rebase" name="Repo Rebase" version="1.0" provider-name="Rik Ream">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
	<extension point="xbmc.addon.repository" name="Repo Rebase">
        <dir>                         
            <info compressed="false">https://raw.githubusercontent.com/fontsvr/nexus/master/repo/zips/addons.xml</info>
